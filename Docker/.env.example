# ==============================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ===== CLOUDFLARE DDNS =====
CF_API_KEY=your_cloudflare_api_key_here
CF_ZONE=yourdomain.com
CF_SUBDOMAIN=home
CF_PROXIED=true

# ===== GRAFANA =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_strong_password

# ===== AUTHELIA =====
AUTHELIA_JWT_SECRET=generate_with_openssl_rand_base64_64
AUTHELIA_SESSION_SECRET=generate_with_openssl_rand_base64_64
AUTHELIA_STORAGE_ENCRYPTION_KEY=generate_with_openssl_rand_base64_64

# ===== REDIS =====
REDIS_PASSWORD=change_me_redis_password

# ===== POSTGRESQL =====
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_postgres_password
POSTGRES_DB=postgres

# ===== MARIADB =====
MYSQL_ROOT_PASSWORD=change_me_mysql_root_password
MYSQL_DATABASE=homelab
MYSQL_USER=homelab
MYSQL_PASSWORD=change_me_mysql_password

# ===== N8N =====
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_n8n_password
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678
N8N_DB_NAME=n8n

# ===== OPEN-WEBUI =====
OPEN_WEBUI_SECRET_KEY=generate_with_openssl_rand_base64_32
OLLAMA_BASE_URL=http://host.docker.internal:11434
OPENAI_API_KEY=sk-your_openai_api_key_if_needed

# ===== PAPERLESS-NGX =====
PAPERLESS_SECRET_KEY=generate_with_openssl_rand_base64_64
PAPERLESS_URL=http://localhost:8010
PAPERLESS_DB_NAME=paperless
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=change_me_paperless_password
PAPERLESS_ADMIN_MAIL=admin@yourdomain.com

# ===== WATCHTOWER =====
# Optional: Notification URL for Watchtower updates
# Examples:
# - Discord: discord://token@channel
# - Telegram: telegram://token@chat_id
# - Email: smtp://username:password@host:port/?from=sender@example.com&to=receiver@example.com
WATCHTOWER_NOTIFICATION_URL=

# ===== NETDATA =====
# Optional: Netdata Cloud integration
NETDATA_CLAIM_TOKEN=
NETDATA_CLAIM_ROOMS=

# ===== HOMARR =====
HOMARR_BASE_URL=http://localhost:7575

# ===== CHANGEDETECTION =====
CHANGEDETECTION_BASE_URL=http://localhost:5050

# ===== FILE BROWSER =====
# Root directory for File Browser (default: /home)
FILEBROWSER_ROOT=/home

# ===== WETTY (Web Terminal) =====
WETTY_SSH_HOST=localhost
WETTY_SSH_PORT=22
WETTY_SSH_USER=your_username

# ===== DUPLICATI =====
# Source directory to backup (default: /home)
DUPLICATI_SOURCE=/home

# ===== SYNCTHING =====
# Directory to sync (default: /home)
SYNCTHING_SYNC=/home

